<h2>Listing all articles</h2>
<h3><%= link_to "New Article", new_article_path%></h3>
<table>
	<tr>
		<th>TITLE</th>
		<th>TEXT</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |article|%>
		<tr>
			<td><%= article.title%></td>
			<td><%= article.text%></td>
			<td><%= link_to "Show", article_path(article)%></td>
			<td><%= link_to "Edit", edit_article_path(article) %></td>
			<td><%= link_to "Destroy",article_path(article),method: :delete,data: {confirm: "Article will be deleted !"}%></td>
		</tr>
	<% end  %>	
</table>